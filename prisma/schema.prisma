generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int    @id @default(autoincrement())
  login      String @unique
  avatar_url String
  tasks      Task[]
}

model Task {
  id       Int    @id @default(autoincrement())
  title    String
  subtitle String
  user     Users? @relation(fields: [userId], references: [id])
  userId   Int?
}
